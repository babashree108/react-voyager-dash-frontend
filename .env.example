# NXT Class Environment Configuration
# Copy this file to .env and update with your values
# NEVER commit .env to version control!

# ====================================
# Database Configuration
# ====================================
DB_ROOT_PASSWORD=your_secure_root_password_here
DB_NAME=nxtClass108
DB_USERNAME=nxtclass_user
DB_PASSWORD=your_secure_db_password_here

# ====================================
# JWT Configuration
# ====================================
# Generate with: openssl rand -base64 64 | tr -d '\n'
JWT_SECRET=your_jwt_secret_here_minimum_64_characters_recommended
JWT_EXPIRATION=3600000

# ====================================
# CORS Configuration
# ====================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80,http://127.0.0.1:5173

# ====================================
# Frontend Configuration
# ====================================
VITE_API_URL=http://localhost:8080/api

# ====================================
# Spring Configuration
# ====================================
SPRING_PROFILE=dev

# ====================================
# Logging Configuration
# ====================================
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN
HIBERNATE_LOG_LEVEL=WARN
JPA_SHOW_SQL=false

# ====================================
# Development Overrides (uncomment for dev)
# ====================================
# LOG_LEVEL=DEBUG
# SECURITY_LOG_LEVEL=DEBUG
# JPA_SHOW_SQL=true
