# NXT Class - Environment Configuration
# Copy this file to .env and update with your values

# ===================================
# DATABASE CONFIGURATION
# ===================================
MYSQL_ROOT_PASSWORD=nxtclass_root_2024
MYSQL_DATABASE=nxtclass_db
MYSQL_USER=nxtclass_user
MYSQL_PASSWORD=nxtclass_pass_2024

# ===================================
# BACKEND CONFIGURATION
# ===================================
SPRING_PROFILE=prod
SHOW_SQL=false
JWT_SECRET=your-super-secret-jwt-key-change-this-to-a-long-random-string
CORS_ALLOWED_ORIGINS=http://localhost,http://yourdomain.com

# ===================================
# FRONTEND CONFIGURATION
# ===================================
# For local development: http://localhost/api
# For production: http://your-domain.com/api or https://your-domain.com/api
VITE_API_URL=http://localhost/api

# ===================================
# N8N CONFIGURATION (Optional)
# ===================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_me_n8n_2024
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
TIMEZONE=Asia/Kolkata

# ===================================
# DEPLOYMENT CONFIGURATION
# ===================================
# Your Hostinger domain or subdomain
DOMAIN_NAME=nxtclass.yourdomain.com

# Email for SSL certificate (if using Let's Encrypt)
LETSENCRYPT_EMAIL=your-email@example.com
